{
	"compilerOptions": {
		"baseUrl": ".",
		"module": "ESNext",
		"target": "ESNext",
		"lib": ["DOM", "ESNext"],
		"strict": false,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"jsx": "preserve",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"noUnusedLocals": false,
		"strictNullChecks": true,
		"forceConsistentCasingInFileNames": true,

		"paths": {
			"~/*": ["./*"],
			"@/*": ["./src/*"]
		},
		"types": [
			"vite/client",
		]
	},
	"exclude": ["node_modules", "dist"]
}
